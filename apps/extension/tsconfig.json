    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    "../../declarations.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/ui"
    },
    {
      "path": "../../packages/utilities"
    },
    {
      "path": "../../packages/wallet"
    }
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "types": [
      "chrome",
      "jest"
    ]
  }
}
